<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/Component_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

    <Button
        android:id="@+id/Component_buttonSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:backgroundTint="#55ff55"
        android:text="Success" />

    <Button
        android:id="@+id/Component_buttonError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ff5555"
        android:text="Error" />

    <TextView
        android:id="@+id/Component_textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="TextView" />

    <com.cmykui.framework.cmykui.component.LoadingComponent
        android:id="@+id/Component_loader"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</LinearLayout>