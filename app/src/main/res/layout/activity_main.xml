<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cmyk="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#dddddd">

    <com.cmykui.framework.cmykui.layout.ImageLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.cmykui.framework.cmykui.layout.ImageLayoutItem
            android:id="@+id/JerkoPlayground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:gravity="center">

            <com.cmykui.framework.cmykui.layout.ImageLayoutItemMenuItem
                android:id="@+id/PrebaciJerko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="45dp"
                app:text="Pogledaj >" />

        </com.cmykui.framework.cmykui.layout.ImageLayoutItem>

        <com.cmykui.framework.cmykui.layout.ImageLayoutItem
            android:id="@+id/MatijaPlayground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:background="#ffffff"
            android:gravity="center">

            <com.cmykui.framework.cmykui.layout.ImageLayoutItemMenuItem
                android:id="@+id/PrebaciMatija"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="45dp"
                app:text="Pogledaj >" />

        </com.cmykui.framework.cmykui.layout.ImageLayoutItem>

        <com.cmykui.framework.cmykui.layout.ImageLayoutItem
            android:id="@+id/NikoPlayground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:background="#ffffff"
            android:gravity="center">

            <com.cmykui.framework.cmykui.layout.ImageLayoutItemMenuItem
                android:id="@+id/PrebaciNiko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="45dp"
                app:text="Pogledaj >" />

        </com.cmykui.framework.cmykui.layout.ImageLayoutItem>
    </com.cmykui.framework.cmykui.layout.ImageLayout>


</LinearLayout>