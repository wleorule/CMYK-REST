<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:fab_toolbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_layout"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NikoPlayground">

    <TextView
        android:id="@+id/ispis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

    <hr.foi.air.cmykui.component.FABComponent
        android:id="@+id/toolbar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/add"
        fab:color="@color/design_default_color_primary"
        fab:color_pressed="@color/colorAccent"
        fab:fab_height="50"
        fab:fab_width="50"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <hr.foi.air.cmykui.component.FABToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        fab_toolbar:color_toolbar="@color/design_default_color_primary"
        fab_toolbar:firstIcon="@drawable/phone_b_24dp"
        fab_toolbar:secondIcon="@drawable/settings_b_24dp"
        fab_toolbar:thirdIcon="@drawable/done_b_24dp">
    </hr.foi.air.cmykui.component.FABToolbar>

    <hr.foi.air.cmykui.component.FAMComponent
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="215dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        fab:fab_position="bottom">

        <hr.foi.air.cmykui.component.FABComponent
            android:id="@+id/menu_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            fab:color="@color/colorAccent"
            fab:color_pressed="@color/colorPrimary"
            fab:fab_height="50"
            fab:fab_width="50"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <hr.foi.air.cmykui.component.FABComponent
            android:id="@+id/menu_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            fab:color="@color/colorAccent"
            fab:color_pressed="@color/colorPrimary"
            fab:fab_height="50"
            fab:fab_width="50"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <hr.foi.air.cmykui.component.FABComponent
            android:id="@+id/menu_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            fab:color="@color/colorAccent"
            fab:color_pressed="@color/colorPrimary"
            fab:fab_height="50"
            fab:fab_width="50"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />
    </hr.foi.air.cmykui.component.FAMComponent>

</RelativeLayout>